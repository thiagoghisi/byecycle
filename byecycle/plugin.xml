<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="byecycle"
   name="Byecycle Plug-in"
   version="0.0.9"
   provider-name="Klaus Wuestefeld and Rodrigo B. de Oliveira"
   class="byecycle.ByecyclePlugin">

   <runtime>
      <library name="byecycle.jar">
         <export name="*"/>
      </library>
      <library name="lib/draw2d/draw2d.jar">
         <export name="*"/>
      </library>
   </runtime>


   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.jdt"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.core.resources"/>
   </requires>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Byecycle"
            id="byecycle">
      </category>
      <view
            name="Dependencies"
            icon="icons/sample.gif"
            category="byecycle"
            class="byecycle.views.ByecycleView"
            id="byecycle.views.ByecycleView">
      </view>
   </extension>
   
   <extension point="org.eclipse.ui.perspectiveExtensions">
          <perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective">
               <view id="byecycle.views.ByecycleView"
                    relative="org.eclipse.ui.views.ProblemView"
                    relationship="stack"/>
   </perspectiveExtension>
</extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="byecycle.preferences.ByecyclePreferencePage"
            id="byecycle.preferences.ByecyclePreferencePage"
            name="Byecycle"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="byecycle.preferences.PreferenceInitializer"/>
   </extension>
   <extension point="org.eclipse.ui.popupMenus">
   <objectContribution objectClass="org.eclipse.jdt.core.IType" id="byecycle.SelectElement">
	<action label="Show Dependencies" class="byecycle.popup.actions.SelectElementAction" menubarPath="additions" id="byecycle.showElementAction">
	</action>
</objectContribution>
   <objectContribution objectClass="org.eclipse.jdt.core.ICompilationUnit" id="byecycle.SelectElement">
	<action label="Show Dependencies" class="byecycle.popup.actions.SelectElementAction" menubarPath="additions" id="byecycle.showElementAction">
	</action>
</objectContribution>
   <objectContribution objectClass="org.eclipse.jdt.core.IPackageFragment" id="byecycle.SelectElement">
	<action label="Show Dependencies" class="byecycle.popup.actions.SelectElementAction" menubarPath="additions" id="byecycle.showElementAction">
	</action>
</objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="byecycle.toggleActive"
            targetID="byecycle.views.ByecycleView">
         <menu
               id="byecycle.toggleActiveMenu"
               label="Toggle"/>
         <action
               class="byecycle.views.actions.ToggleActiveAction"
               icon="icons/pause.gif"
               id="byecycle.toggleActiveAction"
               label="Toggle Active"
               style="toggle"
               toolbarPath="Toggle"
               tooltip="Pause diagram layout thread">
         </action>
      </viewContribution>
   </extension>
</plugin>
